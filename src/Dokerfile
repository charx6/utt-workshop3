# pull official base image
FROM python:alpine

# set work directory
WORKDIR /usr/src/app

# set environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# install dependencies
RUN pip install --upgrade pip
RUN pip install flask gunicorn



# copy project
RUN mkdir apiFlask
COPY apiFlask/* apiFlask/.
RUN cd apiFlask
EXPOSE 5000
CMD ["flask", "run"] 

